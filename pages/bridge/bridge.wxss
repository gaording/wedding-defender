/* pages/bridge/bridge.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 100rpx;
  min-height: 100vh;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.menu-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
}

.menu-arrow {
  font-size: 40rpx;
  color: #cccccc;
}

/* 每日建议 */
.tip-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 16rpx;
  padding: 30rpx;
}

.tip-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
}

.tip-content {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.8;
}

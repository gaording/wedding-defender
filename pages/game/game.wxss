/* pages/game/game.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 100rpx;
  min-height: 100vh;
}

/* 游戏头部 */
.game-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.game-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.game-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 游戏状态 */
.game-stats {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  margin-bottom: 24rpx;
}

.stat-item:last-child {
  margin-bottom: 0;
}

.stat-value {
  display: block;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.stat-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.stat-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s;
}

.stat-number {
  float: right;
  font-size: 24rpx;
  color: #666666;
  margin-top: -32rpx;
}

/* 开始界面 */
.start-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  width: 100%;
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
  text-align: center;
}

.intro-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 2;
  margin-bottom: 16rpx;
}

.btn-start {
  width: 400rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: none;
}

/* 游戏进行中 */
.game-screen {
}

.scenario-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.scenario-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.scenario-role {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.scenario-location {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.scenario-content {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
}

.scenario-text {
  font-size: 32rpx;
  color: #ffffff;
  line-height: 1.8;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 3rpx solid #e5e7eb;
  transition: all 0.3s;
}

.option-card:active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.option-text {
  display: block;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.option-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 游戏结束 */
.end-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx;
  margin-bottom: 40rpx;
  width: 100%;
  text-align: center;
}

.result-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 40rpx;
}

.result-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-item {
  display: flex;
  flex-direction: column;
}

.result-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.result-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
}

.achievement-section {
  margin-bottom: 30rpx;
}

.achievement-text {
  font-size: 32rpx;
  color: #f59e0b;
  font-weight: 500;
}

.result-comment {
  margin-bottom: 20rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

.btn-restart {
  width: 400rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: none;
}

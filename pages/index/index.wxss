/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 顶部问候区 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
}

.greeting {
  margin-bottom: 30rpx;
}

.greeting-text {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.greeting-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.daily-buff {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx;
}

.buff-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.buff-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.buff-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.buff-desc {
  font-size: 24rpx;
  opacity: 0.85;
}

/* 数据统计 */
.stats-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e5e7eb;
}

/* 每日一句 */
.daily-quote {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.quote-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.quote-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.quote-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.quote-content {
  display: flex;
  flex-direction: column;
}

.quote-text {
  font-size: 32rpx;
  color: #ffffff;
  line-height: 1.6;
  font-weight: 500;
}

.quote-author {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
  text-align: right;
}

/* 快速入口 */
.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.98);
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 22rpx;
  color: #999999;
}

/* 称号展示 */
.titles-card {
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
  margin-bottom: 30rpx;
}

.titles-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.titles-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.titles-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
}

.titles-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.title-tag {
  background: rgba(255, 255, 255, 0.25);
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.titles-empty {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

/* 热门话题 */
.topics-card {
  margin-bottom: 30rpx;
}

.topics-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.topics-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.topics-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.topic-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.topic-item:last-child {
  border-bottom: none;
}

.topic-text {
  font-size: 28rpx;
  color: #666666;
}

.topic-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

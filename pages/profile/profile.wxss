/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 100rpx;
  min-height: 100vh;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.user-avatar-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #ffffff;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  align-self: flex-start;
}

/* 称号区域 */
.titles-section {
  border-top: 2rpx solid rgba(255, 255, 255, 0.2);
  padding-top: 24rpx;
}

.titles-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  display: block;
}

.titles-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.title-tag {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
}

/* 数据统计 */
.stats-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e5e7eb;
}

/* 功能菜单 */
.menu-section {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 40rpx;
  color: #cccccc;
}

/* 底部信息 */
.footer {
  text-align: center;
  padding: 60rpx 0;
}

.footer-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #667eea;
  margin-bottom: 12rpx;
}

.footer-subtitle {
  font-size: 24rpx;
  color: #999999;
}

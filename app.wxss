/**app.wxss**/
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 标题 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 按钮 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  border: none;
}

.btn-secondary {
  background: #ffffff;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 48rpx;
  padding: 22rpx 46rpx;
  font-size: 32rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-primary {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.tag-success {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.tag-warning {
  background: rgba(245, 158, 11, 0.1);
  color: #f59e0b;
}

/* 文本 */
.text-primary {
  color: #667eea;
}

.text-secondary {
  color: #999999;
}

.text-success {
  color: #10b981;
}

.text-danger {
  color: #ef4444;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #e5e7eb;
  margin: 24rpx 0;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}
